 - name: Update job status to 'inprogress' in feature_status
      set_fact:
        updated_feature_status: >-
          {{
            vars[Status_var][Feature].jobs.joblist
            | map('combine', {
                'status': (
                  'inprogress' if item.name == Jobset.name else item.status
                )
              })
            | list
          }}

    - name: Update the feature_status variable
      set_fact:
        "{{ Status_var }}": >-
          {{
            vars[Status_var] | combine({
              Feature: {
                'jobs': {
                  'joblist': updated_feature_status
                }
              }
            })
          }}
