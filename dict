  tasks:
    - name: Update job status to 'inprogress' in feature_status
      set_fact:
        updated_joblist: >-
          {{
            [] | union([
              {
                'name': item.name,
                'status': 'inprogress' if item.name == Jobset.name else item.status
              } for item in vars[Status_var][Feature].jobs.joblist
            ])
          }}
    
    - name: Update the feature_status variable
      set_fact:
        "{{ Status_var }}": >-
          {{
            vars[Status_var] | combine({
              Feature: {
                'jobs': {
                  'joblist': updated_joblist
                }
              }
            })
          }}
